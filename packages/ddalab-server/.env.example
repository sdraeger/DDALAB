# DDALAB Server Configuration
# Copy this file to .env and customize

# Database connection
DATABASE_URL=postgres://ddalab:ddalab_secure_password@localhost:5432/ddalab
DB_PASSWORD=ddalab_secure_password

# Server settings
DDALAB_PORT=8080
DDALAB_BIND_ADDR=0.0.0.0

# Institution information
INSTITUTION_NAME=Research Lab
BROKER_PASSWORD=changeme_to_secure_password

# Discovery
ENABLE_MDNS=true

# Security
REQUIRE_AUTH=true
ENABLE_ENCRYPTION=true
SESSION_TIMEOUT_SECONDS=3600
HEARTBEAT_TIMEOUT_SECONDS=300

# Logging
RUST_LOG=ddalab_server=info
