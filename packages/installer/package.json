{
  "name": "ddalab-installer",
  "version": "1.0.0",
  "description": "An application to help configure .env files.",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc && node ./esbuild.config.mjs && cpx \"src/installer.html\" \"dist/src\" && cpx \"src/style.css\" \"dist/src\" && cpx \"src/vendor/js/bootstrap.bundle.min.js\" \"dist/src/vendor/js\"",
    "start": "npm run build && NODE_ENV=development electron .",
    "watch": "tsc -w",
    "test": "echo \"Error: no test specified\" && exit 1",
    "package": "npm run build && electron-builder",
    "package:win": "npm run build && electron-builder --win",
    "package:mac": "npm run build && electron-builder --mac",
    "package:linux": "npm run build && electron-builder --linux"
  },
  "keywords": [
    "electron",
    "env",
    "editor"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^20.11.16",
    "cpx": "^1.5.0",
    "electron": "28.0.0",
    "electron-builder": "^24.9.1",
    "esbuild": "^0.20.0",
    "typescript": "^5.3.3"
  },
  "build": {
    "appId": "com.ddalab.installer",
    "productName": "DDALab Installer",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
