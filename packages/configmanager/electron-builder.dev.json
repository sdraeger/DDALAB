{
	"appId": "com.ddalab.configmanager.dev",
	"productName": "DDALAB ConfigManager (Dev)",
	"directories": {
		"output": "release-dev"
	},
	"files": [
		"dist/**/*",
		"node_modules/**/*",
		"package.json",
		"src/assets/**/*"
	],
	"publish": {
		"provider": "s3",
		"bucket": "ddalab-configmanager-updates",
		"region": "us-east-1",
		"channel": "development",
		"path": "dev",
		"acl": null,
		"storageClass": "STANDARD",
		"requestHeaders": {
			"Cache-Control": "max-age=86400"
		}
	},
	"mac": {
		"target": [
			{
				"target": "dmg",
				"arch": [
					"x64",
					"arm64"
				]
			}
		],
		"category": "public.app-category.developer-tools",
		"artifactName": "DDALAB-ConfigManager-Dev-${version}-${arch}.${ext}",
		"identity": false,
		"hardenedRuntime": false,
		"gatekeeperAssess": false,
		"entitlements": "entitlements.dev.plist",
		"entitlementsInherit": "entitlements.dev.plist",
		"type": "development"
	},
	"win": {
		"target": [
			{
				"target": "nsis",
				"arch": [
					"x64",
					"arm64"
				]
			}
		],
		"artifactName": "DDALAB-ConfigManager-Dev-${version}-${arch}.${ext}",
		"certificateFile": null,
		"certificatePassword": null,
		"rfc3161TimeStampServer": null,
		"timeStampServer": null
	},
	"linux": {
		"target": [
			{
				"target": "AppImage",
				"arch": [
					"x64",
					"arm64"
				]
			},
			{
				"target": "deb",
				"arch": [
					"x64",
					"arm64"
				]
			},
			{
				"target": "tar.gz",
				"arch": [
					"x64",
					"arm64"
				]
			}
		],
		"artifactName": "DDALAB-ConfigManager-Dev-${version}-${arch}.${ext}",
		"category": "Development",
		"maintainer": "DDALAB Team",
		"vendor": "DDALAB",
		"synopsis": "DDALAB Configuration Manager (Dev)",
		"description": "A configuration management tool for DDALAB applications (Development Version)"
	},
	"asar": true,
	"compression": "normal"
}