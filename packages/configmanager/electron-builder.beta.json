{
	"appId": "com.ddalab.configmanager.beta",
	"productName": "DDALAB ConfigManager (Beta)",
	"directories": {
		"output": "release-beta"
	},
	"files": [
		"dist/**/*",
		"node_modules/**/*",
		"package.json",
		"src/assets/**/*"
	],
	"publish": {
		"provider": "s3",
		"bucket": "ddalab-configmanager-updates",
		"region": "us-east-1",
		"channel": "beta",
		"path": "beta",
		"acl": null
	},
	"mac": {
		"target": [
			{
				"target": "dmg",
				"arch": [
					"x64",
					"arm64"
				]
			}
		],
		"category": "public.app-category.developer-tools",
		"artifactName": "DDALAB-ConfigManager-Beta-${version}-${arch}.${ext}",
		"identity": null,
		"hardenedRuntime": false,
		"gatekeeperAssess": false,
		"entitlements": null,
		"entitlementsInherit": null
	},
	"win": {
		"target": [
			{
				"target": "nsis",
				"arch": [
					"x64",
					"arm64"
				]
			}
		],
		"icon": "build/icon.ico",
		"artifactName": "DDALAB-ConfigManager-Beta-${version}-${arch}.${ext}",
		"certificateFile": null,
		"certificatePassword": null,
		"rfc3161TimeStampServer": null,
		"timeStampServer": null
	},
	"linux": {
		"target": [
			{
				"target": "AppImage",
				"arch": [
					"x64",
					"arm64"
				]
			},
			{
				"target": "deb",
				"arch": [
					"x64",
					"arm64"
				]
			},
			{
				"target": "rpm",
				"arch": [
					"x64",
					"arm64"
				]
			},
			{
				"target": "tar.gz",
				"arch": [
					"x64",
					"arm64"
				]
			}
		],
		"icon": "build/icon.png",
		"artifactName": "DDALAB-ConfigManager-Beta-${version}-${arch}.${ext}",
		"category": "Development",
		"maintainer": "DDALAB Team",
		"vendor": "DDALAB",
		"synopsis": "DDALAB Configuration Manager (Beta)",
		"description": "A configuration management tool for DDALAB applications (Beta Version)"
	},
	"nsis": {
		"oneClick": false,
		"allowToChangeInstallationDirectory": true,
		"createDesktopShortcut": true,
		"createStartMenuShortcut": true,
		"installerIcon": "build/icon.ico",
		"uninstallerIcon": "build/icon.ico",
		"installerHeaderIcon": "build/icon.ico"
	},
	"dmg": {
		"title": "DDALAB ConfigManager (Beta)",
		"icon": "build/icon.icns"
	},
	"appImage": {
		"category": "Development"
	},
	"asar": true,
	"compression": "normal"
}