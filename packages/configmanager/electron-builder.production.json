{
	"appId": "com.ddalab.configmanager",
	"productName": "DDALAB ConfigManager",
	"directories": {
		"output": "release"
	},
	"files": [
		"dist/**/*",
		"package.json",
		"src/assets/**/*"
	],
	"asar": true,
	"compression": "maximum",
	"publish": {
		"provider": "s3",
		"bucket": "ddalab-configmanager-updates",
		"region": "us-east-1",
		"channel": "latest",
		"path": "production",
		"acl": null
	},
	"mac": {
		"target": [
			{
				"target": "dmg",
				"arch": [
					"x64",
					"arm64"
				]
			}
		],
		"category": "public.app-category.developer-tools",
		"artifactName": "DDALAB-ConfigManager-${version}-${arch}.${ext}",
		"hardenedRuntime": true,
		"gatekeeperAssess": false,
		"entitlements": "entitlements.mac.plist",
		"entitlementsInherit": "entitlements.mac.plist",
		"type": "distribution",
		"icon": "build/icon.icns",
		"notarize": {
			"teamId": "YOUR_TEAM_ID",
			"appleId": "your-apple-id@domain.com",
			"appleIdPassword": "@keychain:AC_PASSWORD"
		}
	},
	"win": {
		"target": [
			{
				"target": "nsis",
				"arch": [
					"x64",
					"arm64"
				]
			}
		],
		"icon": "build/icon.ico",
		"artifactName": "DDALAB-ConfigManager-${version}-${arch}.${ext}",
		"certificateFile": "win-certificate.pfx",
		"certificatePassword": "${env.WIN_CERT_PASSWORD}",
		"timeStampServer": "http://timestamp.digicert.com",
		"rfc3161TimeStampServer": "http://timestamp.digicert.com"
	},
	"linux": {
		"target": [
			{
				"target": "AppImage",
				"arch": [
					"x64",
					"arm64"
				]
			},
			{
				"target": "deb",
				"arch": [
					"x64",
					"arm64"
				]
			},
			{
				"target": "rpm",
				"arch": [
					"x64",
					"arm64"
				]
			},
			{
				"target": "snap",
				"arch": [
					"x64",
					"arm64"
				]
			},
			{
				"target": "tar.gz",
				"arch": [
					"x64",
					"arm64"
				]
			}
		],
		"icon": "build/icon.png",
		"artifactName": "DDALAB-ConfigManager-${version}-${arch}.${ext}",
		"category": "Development",
		"maintainer": "DDALAB Team",
		"vendor": "DDALAB",
		"synopsis": "DDALAB Configuration Manager",
		"description": "A configuration management tool for DDALAB applications",
		"homepage": "https://github.com/ddalab/configmanager"
	},
	"nsis": {
		"oneClick": false,
		"allowToChangeInstallationDirectory": true,
		"createDesktopShortcut": true,
		"createStartMenuShortcut": true,
		"perMachine": false,
		"installerIcon": "build/icon.ico",
		"uninstallerIcon": "build/icon.ico",
		"installerHeaderIcon": "build/icon.ico",
		"deleteAppDataOnUninstall": true
	},
	"dmg": {
		"title": "DDALAB ConfigManager",
		"icon": "build/icon.icns",
		"background": "build/dmg-background.png",
		"window": {
			"width": 540,
			"height": 380
		},
		"contents": [
			{
				"x": 410,
				"y": 150,
				"type": "link",
				"path": "/Applications"
			},
			{
				"x": 130,
				"y": 150,
				"type": "file"
			}
		]
	}
}