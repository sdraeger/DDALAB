{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "DDALAB",
  "version": "0.1.0",
  "identifier": "com.ddalab.desktop",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build", 
    "devUrl": "http://localhost:3003",
    "frontendDist": "../out"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "DDALAB",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "center": true,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "alwaysOnTop": false,
        "skipTaskbar": false,
        "theme": "Light"
      }
    ],
    "security": {
      "csp": null,
      "capabilities": ["default"]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png"
    ],
    "resources": ["popout.html"],
    "copyright": "",
    "category": "Education",
    "shortDescription": "Delay Differential Analysis Laboratory",
    "longDescription": "A scientific computing application for performing Delay Differential Analysis on EDF and ASCII files."
  },
  "plugins": {}
}