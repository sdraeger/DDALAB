{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "DDALAB",
  "version": "1.0.19",
  "identifier": "com.ddalab.desktop",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:3003",
    "frontendDist": "../out"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "DDALAB",
        "width": 1400,
        "height": 1200,
        "minWidth": 1200,
        "minHeight": 1000,
        "center": true,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "alwaysOnTop": false,
        "skipTaskbar": false,
        "theme": "Light",
        "focus": true,
        "visible": true
      }
    ],
    "security": {
      "csp": null,
      "capabilities": ["default"],
      "devCsp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.ico"
    ],
    "resources": {
      "popout.html": "popout.html"
    },
    "copyright": "",
    "category": "Education",
    "shortDescription": "Delay Differential Analysis Laboratory",
    "longDescription": "A scientific computing application for performing Delay Differential Analysis on EDF and ASCII files."
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/sdraeger/DDALAB/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEQxRDAwQUQzMDM4NTU5NEIKUldSTFdZVUQwd3JRMFIzeFhzVy9DcGdaS0xOUmRZemV2RGVEVUlaRFlmYUxuVUNnUFlUSTV3dUYK"
    }
  }
}
