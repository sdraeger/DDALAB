# Example direnv configuration
# Copy this to .envrc and customize as needed

# Load environment files
dotenv
dotenv_if_exists .env.local

# Add local bin directories to PATH
PATH_add ./node_modules/.bin
PATH_add ./packages/api/.venv/bin

# Python environment
export PYTHONPATH="${PWD}/packages/api:${PYTHONPATH}"

# Node.js environment
export NODE_ENV="${NODE_ENV:-development}"

# Custom aliases (optional)
alias dda-dev="npm run dev"
alias dda-test="npm run test"
