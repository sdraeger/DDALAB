# General settings
DDALAB_RELOAD=true

# API settings
DDALAB_API_HOST=localhost
DDALAB_API_PORT=8001

# Data directory settings
DDALAB_DATA_DIR=data/

# DDA binary settings
DDALAB_DDA_BINARY_PATH=data/bin/run_DDA_ASCII

# Analysis settings
DDALAB_MAX_CONCURRENT_TASKS=4
DDALAB_TASK_TIMEOUT=300

# Celery settings
DDALAB_CELERY_BROKER_URL=redis://redis:6379/0
DDALAB_CELERY_RESULT_BACKEND=redis://redis:6379/0

# Redis settings
DDALAB_REDIS_HOST=redis
DDALAB_REDIS_PORT=6379
DDALAB_REDIS_DB=0

# PostgreSQL Database settings
DDALAB_DB_HOST=postgres
DDALAB_DB_PORT=5432
DDALAB_DB_NAME=ddalab
DDALAB_DB_USER=postgres
DDALAB_DB_PASSWORD=postgres

# SSL settings
