{
  "name": "ddalab",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:docker": "./scripts/dev.sh up",
    "dev:docker:minimal": "./scripts/dev-minimal.sh up",
    "dev:local": "./scripts/dev-local.sh",
    "dev:local:auto": "./scripts/dev-local.sh --start-services",
    "dev:tauri": "cd packages/ddalab-tauri && npm run tauri:dev",
    "build": "turbo run build",
    "install-deps": "npm install",
    "dev:configmanager": "cd packages/configmanager && npm run dev",
    "start:configmanager": "cd packages/configmanager && npm start",
    "build:docker": "./scripts/build-docker-images.sh",
    "build:docker:win": "scripts\\build-docker-images.bat",
    "push:docker": "./scripts/push-docker-images.sh",
    "push:docker:win": "scripts\\push-docker-images.bat",
    "docker:up": "./scripts/dev.sh up",
    "docker:down": "./scripts/dev.sh down",
    "docker:logs": "./scripts/dev.sh logs",
    "check": "./scripts/check-setup.sh",
    "setup:python": "./scripts/setup-python-env.sh",
    "setup:dev": "./scripts/setup-dev.sh",
    "services:start": "./scripts/core-services.sh start",
    "services:stop": "./scripts/core-services.sh stop",
    "services:status": "./scripts/core-services.sh status",
    "config:validate": "node scripts/config-validator.js",
    "deploy:check": "node scripts/deploy-check.js",
    "deploy:generate": "node scripts/generate-deployment.js",
    "deploy:dev": "node scripts/generate-deployment.js development local",
    "deploy:prod": "node scripts/generate-deployment.js production docker-compose",
    "deploy:configmanager": "node scripts/generate-deployment.js production configmanager",
    "codegen": "cargo run --manifest-path packages/dda-codegen/Cargo.toml --release",
    "codegen:check": "cargo run --manifest-path packages/dda-codegen/Cargo.toml --release && git diff --exit-code packages/*/generated/",
    "codegen:dry-run": "cargo run --manifest-path packages/dda-codegen/Cargo.toml --release -- --dry-run --verbose"
  },
  "volta": {
    "node": "20.18.2",
    "npm": "10.9.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "devDependencies": {
    "@types/lodash": "^4.17.20",
    "@types/node": "^22.13.10",
    "@types/node-fetch": "^2.6.13",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.1.0",
    "postcss": "^8.5.6",
    "turbo": "^2.5.3",
    "typescript": "^5.3.3"
  },
  "packageManager": "npm@10.9.2",
  "dependencies": {
    "@radix-ui/react-icons": "^1.3.2",
    "@reduxjs/toolkit": "^2.8.2",
    "@xstate/react": "^5.0.4",
    "d3": "^7.9.0",
    "framer-motion": "^12.23.0",
    "input-otp": "^1.4.2",
    "lodash": "^4.17.21",
    "nanoid": "^5.1.5",
    "react-grid-layout": "^1.5.1",
    "react-redux": "^9.2.0",
    "redux": "^5.0.1",
    "uplot": "^1.6.32",
    "xstate": "^5.19.3"
  }
}
